{
  "env": {
      "browser": true,
      "es6": true,
      "mocha": true
  },
  "extends": [
      "airbnb-base"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "no-param-reassign": 0,
      "indent": [2, "tab"],
      "no-tabs": 0,
      "no-restricted-syntax": ["error"],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "implicit-arrow-linebreak": 0,
      "consistent-return": 0,
      "no-unused-vars": [
      "no-error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
      ],
      "eol-last": ["error", "always"],
      "radix": 0,
      "no-shadow": ["error", { "builtinGlobals": false, "hoist": "functions", "never": [] }],
      "allowElseIf": false,
      "class-methods-use-this": 0,
      "properties": "always",
      "tslint":"disable:max-line-length"
    }
}
